<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Revature Video With Friends</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand">Videos With Friends</a>
            </div>
            <div class="container">
                @if (User.Identity.IsAuthenticated)
                {
                    <p class="navbar-text">Hello, @User.Identity.Name</p>
                    <div class="nav-item">
                        <form asp-controller="account" asp-action="signoff" method="POST">
                            <button type="submit" class="btn btn-light">Sign Out</button>
                        </form>
                    </div>
                }
                else
                {
                    <div class="nav-item">
                        <form asp-controller="account" asp-action="signin" method="GET">
                            <button type="submit" class="btn btn-light">Sign In</button>
                        </form>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Zach Sanders, Jim Phan, Yichen
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
